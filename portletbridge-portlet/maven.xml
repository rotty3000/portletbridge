<project default="war" 
		 xmlns:j="jelly:core" 
		 xmlns:u="jelly:util"
		 xmlns:maven="jelly:maven"
         xmlns:ant="jelly:ant">

  <goal name="dev">
    <j:set var="maven.war.webxml" value="${basedir}/src/conf/web-dev.xml"/>
    <attainGoal name="war:webapp"/>
  </goal>

  <postGoal name="war:webapp">
    <copy toDir="${maven.war.webapp.dir}/WEB-INF/src/java">
      <fileset dir="${maven.src.dir}"/>
    </copy>
    <copy toDir="${maven.war.webapp.dir}/WEB-INF/src/">
      <fileset file="${basedir}/LICENSE.txt"/>
    </copy>
  </postGoal>

  <postGoal name="xdoc:register-reports"> 
    <attainGoal name="maven-linkcheck-plugin:deregister"/> 
    <attainGoal name="maven-checkstyle-plugin:deregister"/> 
  </postGoal>

  <postGoal name="xdoc">
    <attainGoal name="portletbridge:copystyles"/>
  </postGoal>

  <goal name="portletbridge:copystyles"> 
    <copy todir="${maven.docs.dest}\style" overwrite="true">
      <fileset dir="${maven.docs.src}\style"/>
    </copy>
  </goal>

</project>
