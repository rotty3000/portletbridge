<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>My First Portlet</display-name>
    <servlet>
        <servlet-name>PortletBridgePortlet</servlet-name>
        <display-name>PortletBridgePortlet Wrapper</display-name>
        <description>Automated generated Portlet Wrapper</description>
        <servlet-class>org.apache.pluto.core.PortletServlet</servlet-class>
        <init-param>
            <param-name>portlet-guid</param-name>
            <param-value>portletbridge-portlet.PortletBridgePortlet</param-value>
        </init-param>
        <init-param>
            <param-name>portlet-class</param-name>
            <param-value>org.portletbridge.portlet.PortletBridgePortlet</param-value>
        </init-param>
        <security-role-ref>
            <role-name>portletbridge</role-name>
            <role-link>portletbridge</role-link>
        </security-role-ref>
    </servlet>
	<servlet>
	  <servlet-name>pbhs</servlet-name>
	  <servlet-class>org.portletbridge.portlet.PortletBridgetServlet</servlet-class>
	  <init-param>
	      <param-name>proxyBrowserSessionKey</param-name>
	      <param-value>proxyBrowserSessionKey</param-value>
	  </init-param>
	 <load-on-startup>1</load-on-startup>
	</servlet>
	
    <servlet-mapping>
        <servlet-name>pbhs</servlet-name>
        <url-pattern>/pbhs/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PortletBridgePortlet</servlet-name>
        <url-pattern>/PortletBridgePortlet/*</url-pattern>
    </servlet-mapping>
    <taglib>
        <taglib-uri>http://java.sun.com/portlet</taglib-uri>
        <taglib-location>/WEB-INF/tld/portlet.tld</taglib-location>
    </taglib>
    <security-role>
        <role-name>portletbridge</role-name>
    </security-role>
</web-app>
